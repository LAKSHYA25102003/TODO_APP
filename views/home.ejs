    <title>ToDo App</title>
  </head>
  <body>
    <nav id="nav" class="navbar navbar-light" style="background-color: #e3f2fd;">
      <form class="container-fluid justify-content-start navbar ">
        <span><h1>ToDoist</h1></span>
        <span  id="btn">
          <%if(user){%>
            <a href="/users/SignOut" class="btn btn-secondary btn-lg " tabindex="-1" role="button" aria-disabled="true">Sign Out</a>
            <a href="/users/todoList" class="btn btn-primary btn-lg " tabindex="-1" role="button" aria-disabled="true">To Do List</a>
          <%}else{%>
            <a href="/users/SignIn" class="btn btn-primary btn-lg " tabindex="-1" role="button" aria-disabled="true">Sign In</a>
            <a href="/users/SignUp" class="btn btn-secondary btn-lg " tabindex="-1" role="button" aria-disabled="true">Sign Up</a>
          <%}%>
        </span>
      </form>
    </nav>
    <div id="section">
      <div id="content">
        <h2>Let's make your life very secure</h2>
        <h3>Just Plan Your Precious Time!</h3>
        <h4>Do Planning right now with us..</h4>
        <div><a href="/users/SignIn">Click Here to Continue...</a></div>
      </div>
    </div>
    <footer>
      &#169; 2022 ToDoist, inc 
    </footer>

